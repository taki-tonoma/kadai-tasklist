<% if logged_in? %>
    <p>ログイン完了ユーザ: <%= current_user.name %></p>
    <h1>タスク一覧</h1>
    <% if @tasks.any? %>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>id</th>
                    <th>ステータス</th>
                    <th>タスク</th>
                </tr>
            </thead>
            <tbody>
                <% @tasks.each do |task| %>
                    
                    <tr>
                        <th><%= link_to(task.id, task) %> </th>
                        <th><%= task.status %> </th>
                        <th><%= task.content %> </th>
                    </tr>
                <% end %>
            </tbody>
        </table>
    <% end %>

    <%= link_to '新規タスクの登録', new_task_path, class: 'btn btn-success' %>
<% else %>
    <div class="center jumbotton">
        <div class="text-center">
            <h1>Welcome to the Tasklist</h1>
            <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
        </div>
    </div>
<% end %>